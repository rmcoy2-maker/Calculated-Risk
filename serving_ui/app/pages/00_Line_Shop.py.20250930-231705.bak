# ------- Paths -------
def _repo_root() -> Path:
    env = os.environ.get("EDGE_FINDER_ROOT", "").strip()
    if env and Path(env).exists():
        return Path(env)
    here = Path(__file__).resolve()
    for up in [here] + list(here.parents):
        if (up / "exports").exists():
            return up
    return Path.cwd()

REPO = _repo_root()
