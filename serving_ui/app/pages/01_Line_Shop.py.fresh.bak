def _repo_root() -> Path:
    env = os.environ.get("EDGE_FINDER_ROOT")
    if env and Path(env).exists():
        return Path(env)
    try:
        here = Path(__file__).resolve()
    except Exception:
        here = Path.cwd()
    for up in [here] + list(here.parents):
        if (up / "exports").exists():
            return up
    return Path.cwd()

