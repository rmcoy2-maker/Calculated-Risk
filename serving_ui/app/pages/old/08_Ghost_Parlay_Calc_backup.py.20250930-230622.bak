from math import comb as _comb

def _safe_comb(n: int, k: int) -> str:
    try:
        if k <= 0 or n < k:
            return '0'
        v = _comb(n, k)
        return f'{v:,}' if v < 1000000000 else f'{v / 1000000000:.1f}B+'
    except Exception:
        return '‚Äî'
